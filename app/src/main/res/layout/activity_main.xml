<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F2E10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="144dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="257dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text=" SMK SYAFI'I AKROM KOTA PEKALONGAN"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="605dp"
        android:background="#6AC370"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F44336"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="133dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/jadwal" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Jadwal Pelajaran"
                            android:textColor="#000000"
                            android:textSize="19dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#2196F3"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="134dp"
                            android:layout_height="86dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/pjj" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="109dp"
                            android:layout_height="45dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Data Guru"
                            android:textColor="#000000"
                            android:textSize="19dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="169dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#00BCD4"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="134dp"
                            android:layout_height="86dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/galeri1" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="85dp"
                            android:layout_height="39dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="TextView"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            tools:text="Gallery" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FF9800"
                        app:cardCornerRadius="25dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="134dp"
                            android:layout_height="86dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/bkk" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Info BKK"
                            android:textColor="#000000"
                            android:textSize="19sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="155dp"
                            android:layout_height="107dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/jurusan1" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:shadowColor="#000000"
                            android:text="Info Jurusan"
                            android:textSize="19sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FF5722"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="134dp"
                            android:layout_height="86dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/berita" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="109dp"
                            android:layout_height="39dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Berita SMK"
                            android:textColor="#000000"
                            android:textSize="19sp" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="134dp"
                            android:layout_height="86dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/ppdb1" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="PPDB Online"
                            android:textColor="#000000" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#6E46B5"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="133dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/aplikasi" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Tentang Aplikasi"
                            android:textColor="#000000" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>