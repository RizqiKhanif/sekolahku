<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="#3F7542"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/download" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:fontFamily="sans-serif-medium"
            android:text="   SMK SYAFI'I AKROM KOTA PEKALONGAN"
            android:textColor="#000000"
            android:textSize="20sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="568dp"
        android:background="#C6FFC9"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="163dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="137dp"
                            android:layout_height="108dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/jadwal" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="49dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Jadwal Pelajaran"
                            android:textColor="#000000"
                            android:textSize="19dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="163dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="wrap_content"
                            android:layout_height="106dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/pjj" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="89dp"
                            android:layout_height="53dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="File PJJ"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="428dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="163dp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="TextView"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            tools:text="Aktivitas Siswa" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="143dp"
                            android:layout_height="93dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/aktifitas" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="163dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="108dp"
                            android:layout_height="91dp"
                            android:layout_gravity="center|top"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/maps" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_gravity="bottom|center"
                            android:fontFamily="casual"
                            android:text="Lokasi SMK"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>